<h1>管理画面のユーザー一覧画面だよ！</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">ユーザー</th>
      <th scope="col">タスクの数</th>
      <th scope="col">更新</th>
      <th scope="col">削除</th>
      <th scope="col">管理人</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="task_row">
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to "編集", edit_admin_user_path(user.id), id: "cclemon" %></td>
        <td><%= button_to '削除', user_path(user.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
        <td><%= user.admin %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'ユーザー作成', new_user_path %>