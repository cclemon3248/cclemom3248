<!DOCTYPE html>
<html>
  <head>
    <title>Cclemon</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <nav class="navbar navbar-expand-md navbar-dark bg-primary">
    <a class="navbar-brand" href="/">My Admin</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <% if logged_in? %>
      <ul class="navbar-nav">
        <li class="nav-item active">
          <%= link_to "Profile", user_path(current_user.id), class: "text-white mr-3" %>
        </li>
        <li class="nav-item">
          <%= link_to "Logout", session_path(current_user.id), method: :delete, class: "text-white" %>
        </li>
      </ul>
      <% else %>
      <ul class="navbar-nav">
        <li class="nav-item active">
          <%= link_to "Sign up", new_user_path, class: "text-white mr-3" %>
        </li>
        <li class="nav-item">
          <%= link_to "Login", new_session_path, class: "text-white" %>
        </li>
      </ul>
      <% end %>
    </div>

  </nav>
    </header>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <%= yield %>
    <footer class="bg-secondary text-center p-5 m-5">
      Copyright(C)2022 All Rights Reserved
    </footer>
  </body>
</html>
