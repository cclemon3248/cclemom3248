<h1>検索一覧</h1>
<%= params[:title] %>
<p><%= notice %></p>
<%= form_with url:search_tasks_path, local: true, method: "get" do |form| %>
  <%= form.label :title, "Search for" %>
  <%= form.text_field :title %>
  <%= form.select :status, ["未着手", "着手中", "完了"] %>
  <%= form.submit "Search" %>
<% end %>


<table>
  <tr>
    <th>タスク名</th>
    <th>詳しい内容</th>
    <th><%= link_to "終了期限", tasks_path(sort_expired: "true") %></th>
    <th>登録日時</th>
    <th>ステータス</th>
    <th>優先度</th>
  </tr>

  
  <% @tasks.each do |task| %>
  <tr class="task_row">
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= task.deadline %></td>
    <td><%= task.created_at %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
    <td><%= link_to "詳細", task_path(task.id) %></td>
    <td><%= link_to "編集", edit_task_path(task.id) %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
  <% end %>
  
</table>

<%= link_to '新しいタスクを投稿する', new_task_path %>